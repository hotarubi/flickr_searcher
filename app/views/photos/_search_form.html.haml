#search-container
  = form_tag('/photos/search', remote: true, class: "form-search") do
    = hidden_field_tag 'search[page]', '1'
    .accordion
      = text_field_tag 'search[text]', nil, class: "input-medium search-query", placeholder: "search keywords"
      = button_tag 'Search',  data: { disable_with: "Loading..." }
      %span.float-right.toggle-options
        %a(data-toggle="collapse" href="#search-options")
          More search options >>
      #search-options.collapse
        #daterange-search.input-daterange.input-group
          %span.input-group-addon Posted from
          = text_field_tag 'search[min_upload_date]', nil, class: "input-sm form-control", placeholder: "start date"
          %span.input-group-addon to
          = text_field_tag 'search[max_upload_date]', nil, class: "input-sm form-control", placeholder: "end date"
        #daterange-order
          %label Sorted by
          = select_tag "search[sort]", search_sort_opts
